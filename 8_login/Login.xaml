<Window x:Class="_8_login.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_8_login"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Label Content="Login" Margin="10,10,10,0" VerticalAlignment="Top"/>
        <Label Content="Password" Margin="10,64,10,0" VerticalAlignment="Top"/>
        <TextBox Margin="10,41,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Name="LoginBox"/>
        <Button Content="Log in" Margin="10,118,10,0" VerticalAlignment="Top" Click="Login_Click"/>
        <Button Content="Registration" Margin="10,143,10,0" VerticalAlignment="Top" Click="Registration_Click"/>
        <PasswordBox Margin="10,95,10,0" VerticalAlignment="Top" Name="PassBox"/>

    </Grid>
</Window>
