<Window x:Class="_8_login.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_8_login"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Здравствуйте," HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button Content="Войти" Margin="10,64,10,0" VerticalAlignment="Top" Click="Login_Click"/>
        <Button Content="Зарегистрироваться" Margin="10,64,10,0" VerticalAlignment="Top" Grid.Column="1" Click="Registration_Click"/>
        <TextBlock Margin="10,41,10,0" TextWrapping="Wrap" Text="Неизвестный пользователь!" VerticalAlignment="Top" Grid.ColumnSpan="2" Name="NameBox"/>

    </Grid>
</Window>
